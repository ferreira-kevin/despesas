{
  "type": "commonjs",
  "name": "despesas",
  "version": "1.0.0",
  "description": "Este projeto é uma API REST desenvolvida em Node.js que oferece funcionalidades de autenticação de usuário e operações CRUD (Create, Read, Update, Delete) para gerenciar despesas.",
  "main": "server.ts",
  "scripts": {
    "start": "tsnd --transpile-only --respawn --ignore-watch node_modules src/server.ts",
    "pretest": "SET NODE_ENV=test&& sequelize db:migrate",
    "test": "SET NODE_ENV=test&& jest",
    "posttest": "SET NODE_ENV=test&& sequelize db:migrate:undo:all"
  },
  "author": "Kevin Ferreira",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.9.2",
    "nodemailer": "^6.9.11",
    "sequelize": "^6.37.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.23.3",
    "@jest/globals": "^29.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/sequelize": "^4.28.20",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "sequelize-cli": "^6.6.2",
    "sqlite3": "^5.1.7",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
